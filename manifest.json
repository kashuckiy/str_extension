{
    "name": "STR Extensions",
    "description": "Jira extension that helps QA describe bugs faster",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "html/popup.html",
      "default_icon": "images/logo_32"
    },
    "content_scripts": [
      {
        "js": ["js/popup.js"],
        "matches": [
          "<all_urls>"
        ],
        "run_at": "document_end"
      }
    ],
    "permissions": ["activeTab", "scripting"],
    "host_permissions": [
      "<all_urls>"
  ]
  }